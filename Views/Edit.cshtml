@model Crud_ADO_dotnet.ViewModel.Department

@{
    ViewBag.Title = "Update";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4>Create Department</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Department", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.HiddenFor(e=>e.ID)
                        
                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(e => e.Name)
                        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
                        @Html.ValidationMessage("Name", new { @class = "text text-danger" })
                    </div>

                    <div class="form-group">

                        <input type="submit" value="Submit" class="btn btn-info" />
                    </div>
                }
            </div>
        </div>

    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
